<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <!--Shadow Triangle-->
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <solid android:color="#80696969" />
            </shape>
        </rotate>
    </item>

    <!-- Shadow Rectangle-->
    <item android:left="5dp">
        <shape android:shape="rectangle" >
            <solid android:color="#80696969" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!--Triangle-->
    <item android:left="1dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <solid android:color="#fff" />
            </shape>
        </rotate>
    </item>

    <!--Rectangle-->
    <item android:bottom="1dp" android:left="6dp">
        <shape android:shape="rectangle" >
            <solid android:color="#fff" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>