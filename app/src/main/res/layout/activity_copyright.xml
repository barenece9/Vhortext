<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_chat_background">
    <include
        android:id="@+id/appBar"
        layout="@layout/toolbar_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/logo_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_about_screen_logo_for_copyright"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/copyright_tv_version_number"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/logo_center"
        android:layout_alignEnd="@+id/logo_center"
        android:textColor="@android:color/black"
        android:layout_marginRight="@dimen/m_dialog_lr"
        android:layout_below="@+id/logo_center"
        android:text="v 1.0.0"/>

    <TextView
        android:id="@+id/copyright_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/header_text_color"
        android:gravity="center|right"
        android:text="@string/copyrights"
        android:textSize="@dimen/text_size_small"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/m_common"/>


</RelativeLayout>
