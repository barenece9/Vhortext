<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:wachat="http://schemas.android.com/apk/res-auto"
    android:gravity="right"
    android:orientation="vertical"
    android:visibility="visible"
    tools:ignore="ResAuto">

    <LinearLayout
        android:id="@+id/lnr_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:gravity="right"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:src="@drawable/ic_new_chat_screen_arrow_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="right"
            android:orientation="vertical"
            android:showDividers="none">

            <RelativeLayout
                android:id="@+id/rel_classmate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/p_common_reltv">

                <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/p_common_reltv"
                    android:text="@string/classmate"
                    android:textColor="@color/textcolor_language"
                    android:textSize="@dimen/text_size_small"
                    wachat:customFont="@string/font" />

                <ImageView
                    android:id="@+id/iv_classmate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/selector_tick_chat_dropdown" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/m_common"
                android:layout_marginRight="@dimen/m_common"
                android:background="@color/view_yellow_color" />

            <RelativeLayout
                android:id="@+id/rel_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/p_common_reltv">

                <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/p_common_reltv"
                    android:text="@string/friend"
                    android:textColor="@color/textcolor_language"
                    android:textSize="@dimen/text_size_small"
                    wachat:customFont="@string/font" />

                <ImageView
                    android:id="@+id/iv_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/selector_tick_chat_dropdown" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/m_common"
                android:layout_marginRight="@dimen/m_common"
                android:background="@color/view_yellow_color" />

            <RelativeLayout
                android:id="@+id/rel_acquaintance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/p_common_reltv">

                <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/p_common_reltv"
                    android:text="@string/acquaintance"
                    android:textColor="@color/textcolor_language"
                    android:textSize="@dimen/text_size_small"
                    wachat:customFont="@string/font" />


                <ImageView
                    android:id="@+id/iv_acquaintance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/selector_tick_chat_dropdown" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/m_common"
                android:layout_marginRight="@dimen/m_common"
                android:background="@color/view_yellow_color" />

            <RelativeLayout
                android:id="@+id/rel_coworker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/p_common_reltv">

                <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="@dimen/p_common_reltv"
                    android:text="@string/coworker"
                    android:textColor="@color/textcolor_language"
                    android:textSize="@dimen/text_size_small"
                    wachat:customFont="@string/font" />

                <ImageView
                    android:id="@+id/iv_coworker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/selector_tick_chat_dropdown" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/m_common"
                android:layout_marginRight="@dimen/m_common"
                android:background="@color/view_yellow_color" />

            <RelativeLayout
                android:id="@+id/rel_colleague"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/p_common_reltv">

                <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/p_common_reltv"
                    android:text="@string/colleague"
                    android:textColor="@color/textcolor_language"
                    android:textSize="@dimen/text_size_small"
                    wachat:customFont="@string/font" />

                <ImageView
                    android:id="@+id/iv_colleague"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/selector_tick_chat_dropdown" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/m_common"
                android:layout_marginRight="@dimen/m_common"
                android:background="@color/view_yellow_color" />

            <RelativeLayout
                android:id="@+id/rel_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/p_common_reltv">

                <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/p_common_reltv"
                    android:text="@string/other"
                    android:textColor="@color/textcolor_language"
                    android:textSize="@dimen/text_size_small"
                    wachat:customFont="@string/font" />

                <ImageView
                    android:id="@+id/iv_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/selector_tick_chat_dropdown" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
