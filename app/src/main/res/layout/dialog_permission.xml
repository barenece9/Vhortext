<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wachat="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/reg_bg_bottom"
    android:paddingBottom="@dimen/p_bottom_dialog_del"
    android:layout_marginLeft="@dimen/m_dialog_lr"
    android:layout_marginRight="@dimen/m_dialog_lr">

    <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
        android:id="@+id/dialog_permission_tv_common_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/p_dialog_del_t"
        android:padding="2dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_xlarge"
        wachat:customFont="@string/font_bold"
        android:text="This app also needs below permission"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/dialog_permission_ll_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_below="@id/dialog_permission_tv_common_header"
        android:orientation="vertical">




        <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
            android:id="@+id/dialog_permission_tv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/p_dialog_del_t"
            android:padding="0dp"
            android:textColor="@android:color/black"
            wachat:customFont="@string/font_bold"
            android:text="Camera Permission"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_lens_black_24dp"
            android:drawablePadding="5dp"/>

        <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
            android:id="@+id/dialog_permission_tv_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/p_dialog_del_t"
            android:padding="0dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large"
            wachat:customFont="@string/font_bold"
            android:text="Storage Permission"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_lens_black_24dp"
            android:drawablePadding="5dp"/>


        <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
            android:id="@+id/dialog_permission_tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/p_dialog_del_t"
            android:padding="0dp"
            android:textColor="@android:color/black"
            wachat:customFont="@string/font_bold"
            android:text="Contact Permission"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_lens_black_24dp"
            android:drawablePadding="5dp"/>

        <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
            android:id="@+id/dialog_permission_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/p_dialog_del_t"
            android:padding="0dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large"
            wachat:customFont="@string/font_bold"
            android:text="Location Permission"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_lens_black_24dp"
            android:drawablePadding="5dp"/>

        <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
            android:id="@+id/dialog_permission_tv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/p_dialog_del_t"
            android:padding="0dp"
            android:textColor="@android:color/black"
            wachat:customFont="@string/font_bold"
            android:text="Call Permission"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_lens_black_24dp"
            android:drawablePadding="5dp"/>


    </LinearLayout>



    <View
        android:id="@+id/dialog_permission_confirmation_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/dialog_permission_ll_body"
        android:layout_margin="5dp"
        android:background="@color/view_gray_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_permission_confirmation_view"
        android:background="@color/view_gray_color">

        <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
            android:id="@+id/dialog_reg_confirmation_tv_dialog_cancel"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0.10dp"
            android:layout_weight="1"
            android:background="@color/reg_bg_bottom"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/cancel"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large"
            wachat:customFont="@string/font" />

        <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
            android:id="@+id/dialog_reg_confirmation_tv_dialog_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.10dp"
            android:layout_weight="1"
            android:background="@color/reg_bg_bottom"
            android:gravity="center"
            android:padding="5dp"
            android:text="Ok"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large"
            wachat:customFont="@string/font" />
    </LinearLayout>

</RelativeLayout>

