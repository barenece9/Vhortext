<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wachat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_find_people_section"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/p_include_lnr_tb"
    android:paddingLeft="@dimen/p_include_lnr_rl"
    android:paddingRight="@dimen/p_include_lnr_rl"
    android:paddingTop="@dimen/p_include_lnr_tb">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/ic_more_delete_account_icon" />

    <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="Hello"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_xlarge"
        wachat:customFont="@string/font" />


</LinearLayout>
