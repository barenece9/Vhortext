<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wachat="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/reg_bg_bottom"
    android:paddingBottom="@dimen/p_bottom_dialog_del"
    android:layout_marginLeft="@dimen/m_dialog_lr"
    android:layout_marginRight="@dimen/m_dialog_lr">

    <TextView
        android:id="@+id/dialog_confirmation_tv_common_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/p_dialog_del_t"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_large"
        android:text="Audio Recorder"
        android:gravity="center"/>

    <View
        android:id="@+id/dialog_confirmation_view_header"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/dialog_confirmation_tv_common_header_title"
        android:background="@color/view_gray_color" />

    <Chronometer
        android:id="@+id/dialog_chronometer"
        android:textColor="@color/app_Brown"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_confirmation_view_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Chronometer" />

    <TextView
        android:id="@+id/dialog_confirmation_tv_common_header"
        android:layout_below="@id/dialog_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/p_dialog_del_t"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_medium"
        android:text="press start to start recording ..."
        android:gravity="center"/>

    <View
        android:id="@+id/dialog_confirmation_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/dialog_confirmation_tv_common_header"
        android:layout_margin="5dp"
        android:background="@color/view_gray_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_confirmation_view"
        android:background="@color/view_gray_color">

        <Button
            android:id="@+id/dialog_audio_record_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0.10dp"
            android:layout_weight="1"
            android:background="@drawable/selectable_audio_dialog_buttons_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="Start"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large" />
        <Button
            android:id="@+id/dialog_audio_record_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0.10dp"
            android:layout_weight="1"
            android:background="@drawable/selectable_audio_dialog_buttons_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="Cancel"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large" />
        <Button
            android:id="@+id/dialog_audio_record_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.10dp"
            android:layout_weight="1"
            android:background="@drawable/selectable_audio_dialog_buttons_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="Send"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

</RelativeLayout>


