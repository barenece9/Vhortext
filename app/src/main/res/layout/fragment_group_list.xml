<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wachat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        android:id="@+id/appBar"
        layout="@layout/fragment_custom_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_below="@+id/appBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/view_yellow_color"
            android:padding="5dp"
            android:visibility="gone">

            <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
                android:id="@+id/fragment_group_tv_create_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_corner_creat_group"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="Create Group"
                android:textColor="@color/chat_text_color"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                wachat:customFont="@string/font_bold" />

        </RelativeLayout>

        <!--<include
            layout="@layout/include_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />-->

        <ListView
            android:id="@+id/fragment_group_lv"
            android:layout_width="match_parent"
            android:divider="@null"
            android:layout_height="match_parent" />



        <apps.lnsel.com.vhortexttest.helpers.CustomViews.ChatTextView
            android:id="@+id/fragment_group_tv_empty_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/m_common"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/no_data"
            android:textColor="@color/chat_text_color"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold"
            wachat:customFont="@string/font" />

        <apps.lnsel.com.vhortexttest.helpers.CustomViews.ProgressBarCircularIndeterminate
            android:id="@+id/fragment_group_progressBarCircularIndetermininate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/app_Brown"
            android:visibility="gone" />

    </RelativeLayout>
</RelativeLayout>
